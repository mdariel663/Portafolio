---
const skills = [
  {
    category: "Lenguajes de Programaci√≥n",
    items: [
      { name: "Python", icon: "python" },
      { name: "C++", icon: "c" },
      { name: "Kotlin", icon: "kotlin" },
      { name: "Java", icon: "java" },
    ]
  },
  {
    category: "Desarrollo Web",
    items: [
      { name: "React", icon: "react" },
      { name: "Node.js", icon: "nodejs" },
      { name: "Express", icon: "express" },
      { name: "Typescript", icon: "ts"}

    ]
  },
  {
    category: "Herramientas",
    items: [
      { name: "Docker", icon: "docker" },
      { name: "Git", icon: "git" },
      { name: "Qt", icon: "qt" },
      { name: "OpenCV", icon: "opencv" }
    ]
  }
];
---

<style>
  .icon-container {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f1f1f1;
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 1 / 1;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  .icon-container:hover {
    background: #e2e8f0;
    transform: translateY(-5px) scale(1.05);
  }

  .icon-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .icon-container:hover .icon-img {
    transform: scale(1.1);
  }

  .card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    padding: 24px;
    transition: transform 0.3s ease;
  }
  
  .card:hover {
    transform: translateY(-4px);
  }
</style>

<section id="skills" class="py-20 bg-gradient-to-br from-gray-100 to-gray-200">
  <div class="max-w-3xl mx-auto px-6 sm:px-8 lg:px-12">
    <h2 class="text-3xl font-semibold mb-16 text-center text-gray-800">Habilidades</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {skills.map(category => (
        <article class="card" aria-labelledby={`${category.category}-title`}>
          <h3 id={`${category.category}-title`} class="text-2xl font-semibold mb-6 text-purple-600">{category.category}</h3>
          <div class="flex flex-wrap gap-6">
            {category.items.map(skill => (
              <div class="text-center">
                <div class="icon-container">
                  <img 
                    src={`https://skillicons.dev/icons?i=${skill.icon}`} 
                    alt={`${skill.name} icon`} 
                    class="icon-img"
                  />
                </div>
                <span class="text-sm text-gray-700 mt-2">{skill.name}</span>
              </div>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
